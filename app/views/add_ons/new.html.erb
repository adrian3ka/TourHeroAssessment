<div class="container">
  <h1>Add Add-ons to Trip</h1>

  <%= form_with(model: [@trip, @add_on], local: true) do |form| %>
    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, class: "form-control", required: true %>
    </div>

    <div class="form-group">
      <%= form.label :description %>
      <%= form.text_area :description, class: "form-control", required: true %>
    </div>

    <div class="form-group">
      <%= form.label :start_time %>
      <%= form.time_field :start_time, class: "form-control", required: true %>
    </div>

    <div class="form-group">
      <%= form.label :end_time %>
      <%= form.time_field :end_time, class: "form-control", required: true %>
    </div>

    <div class="form-group">
      <%= form.label :price %>
      <%= form.number_field :price, class: "form-control", step: "0.01", required: true %>
    </div>

    <div class="form-group">
      <%= form.label :spot_limit %>
      <%= form.number_field :spot_limit, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.submit class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
